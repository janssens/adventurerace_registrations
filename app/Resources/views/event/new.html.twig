{% extends 'base.html.twig' %}

{% block title %}
Nouvel événement
{% endblock %}

{% block body %}
    <h1>Créer un nouvel événement</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.title) }}
        </div>
        <div class="form-group">
            {{ form_row(form.description) }}
        </div>
        <button type="submit" class="btn btn-primary" ><i class="fa fa-fw fa-plus"></i>Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('event_index') }}" class="btn btn-default"><i class="fa fa-fw fa-chevron-left"></i>Retour</a>
{% endblock %}
