{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des type de course</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Code</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td><a href="{{ path('type_show', { 'code': type.code }) }}">{{ type.id }}</a></td>
                <td>{{ type.title }}</td>
                <td>{{ type.code }}</td>
                <td>{{ type.description }}</td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="{{ path('type_show', { 'code': type.code }) }}" class="btn btn-default"><i class="fa fa-search fa-fw"></i>voir</a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a href="{{ path('type_edit', { 'id': type.id }) }}" class="btn btn-primary"><i class="fa fa-pencil fa-fw"></i>editer</a>
                        {% endif %}
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted('ROLE_SUPER_ADMIN') %}
    <a href="{{ path('type_new') }}" class="btn btn-primary"><i class="fa fa-plus fa-fw"></i>Cr√©er un type</a>
{% endif %}

{% endblock %}
