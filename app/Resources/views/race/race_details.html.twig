{% if (race.public or (is_granted('ROLE_ADMIN') and race.event.owner == app.user) or is_granted('ROLE_SUPER_ADMIN')) %}
<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        {% if race.illustration %}<img src="/{{ race.illustration.webPath }}" class="img-responsive" alt="{{ race.title }}">{% endif %}
        <div class="caption">
            <h3>{{ race.title }}&nbsp;<span class="label label-default">{{ race.type.title }}</span>{% if is_granted('ROLE_ADMIN') %}{% if (race.event.owner == app.user) %}<a href="{{ path('race_edit', { 'id': race.id }) }}"><i class="fa fa-pencil fa-fw"></i></a>{% endif %}{% endif %}</h3>
            <h4>{% if race.date %}{{ race.date|date('d M Y') }}{% endif %}</h4>
            <div class="description">{{ race.description|raw }}</div>
            <p class="resume"><small>{{ race.resume }}</small></p>
            {% if race.open %}
            <p>
                <a href="{{ path('race_show', { 'slug': race.slug }) }}" class="btn btn-default"><i class="fa fa-search fa-fw"></i>Détails</a>
                <a href="{{ path('inscription_new', { 'slug': race.slug }) }}" class="btn btn-primary"><i class="fa fa-plus fa-fw"></i>S'inscrire</a>
            </p>
            {% else %}
                <p><button disabled class="bt bt-default">Fermé</button></p>
            {% endif %}
        </div>
    </div>
</div>
{% endif %}